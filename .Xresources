! Fonts
URxvt.font: xft:Ubuntu Mono:style=Regular:size=12.5:antialias=true
xterm*.font:xft:Ubuntu Mono:style=Regular:size=12.5:antialias=true

URxvt.internalBorder: 128
xterm*.internalBorder: 128

! General
*.scrollBar: false
*.saveLines: 8192
*.internalBorder: 10
*.cursorUnderline: true
*.cursorBlink: true
*.dynamicColors:off
*.letterSpace: 0
*.geometry: 85x20

Xft.autohint: 0
Xft.dpi: 96
Xft.hintstyle: hintnone
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! Separate settings for emacs
emacs.internalBorder: 0

! Clickable Links
*perl-ext-common:	 default,matcher,clipboard
*keysym.Shift-Control-V: perl:clipboard:paste
*urlLauncher:		 firefox
*matcher.button:	 1
*url-select.underline:	 true

